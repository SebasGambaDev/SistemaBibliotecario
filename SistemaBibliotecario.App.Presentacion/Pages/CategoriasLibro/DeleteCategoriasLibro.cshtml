@page
@model SitemaBibliotecario.App.Presentacion.Pages.DeleteCategoriasLibroModel
@{
}

<h2 class="text-light">Eliminar categoria de libro <i class="text-primary">@Model.categoriaLibro.catLibro_nombre</i>
</h2>
<form method="post">
    <input type="hidden" asp-for="categoriaLibro.id" />
    <div class="form-group text-light">
        <strong>Id en base de datos:</strong> @Model.categoriaLibro.id
    </div>

    <div class="form-group text-light">
        <strong>Nombres:</strong> @Model.categoriaLibro.catLibro_nombre
    </div>

    <br>
    <button type="submit" class="btn btn-success">Eliminar</button>
</form>
<br>
<a asp-page="./ListCategoriasLibro" class="btn btn-secondary">Volver a la Lista de categorias de Libro... </a>