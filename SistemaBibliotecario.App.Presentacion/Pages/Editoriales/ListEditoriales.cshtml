@page
@model SitemaBibliotecario.App.Presentacion.Pages.ListEditorialesModel
@{
}

<h1 class="text-light">Listado de editoriales en el sistema</h1>
<p class="text-light">
    @Html.ActionLink("Listar Todo", "./ListEditoriales")
</p>

@using (Html.BeginForm())
{
    <p class="text-light">
        Buscar x Nombre: @Html.TextBox("SearchString")
        <input class="btn btn-warning" type="submit" value="Search" />
    </p>
}

<table class="table table-dark table-hover">
    @foreach (var editorial in Model.editoriales)
    {
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>

        <tr>
            <td>@editorial.id</td>
            <td>@editorial.edit_nombre</td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditEditoriales" asp-route-editorialId="@editorial.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true">Editar</i>
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./DeleteEditoriales" asp-route-editorialId="@editorial.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true">Eliminar</i>
                </a>
            </td>
        </tr>
    }
</table>
<br>
<a asp-page=".\EditEditoriales" class="btn btn-success">Agregar nuevo editorial</a>