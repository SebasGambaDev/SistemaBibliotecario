@page
@model SitemaBibliotecario.App.Presentacion.ListIdiomasModel
@{
}


<h1 class="text-light">Listado de idiomas de libro en el sistema</h1>
<p class="text-light">
    @Html.ActionLink("Listar Todo", "./ListIdiomas")
</p>

@using (Html.BeginForm())
{
    <p class="text-light">
        Buscar x Nombre: @Html.TextBox("SearchString")
        <input class="btn btn-warning" type="submit" value="Search" />
    </p>
}

<table class="table table-dark table-hover">
    @foreach (var idiomaLibro in Model.idiomasLibro)
    {
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>

        <tr>
            <td>@idiomaLibro.id</td>
            <td>@idiomaLibro.idiomaLibro_nombre</td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditIdiomas" asp-route-idiomaLibroId="@idiomaLibro.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true">Editar</i>
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./DeleteIdiomas" asp-route-idiomaLibroId="@idiomaLibro.id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true">Eliminar</i>
                </a>
            </td>
        </tr>
    }
</table>
<br>
<a asp-page=".\EditIdiomas" class="btn btn-success">Agregar nuevo idioma de libro</a>